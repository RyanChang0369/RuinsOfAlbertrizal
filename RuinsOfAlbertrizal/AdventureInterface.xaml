<Page x:Class="RuinsOfAlbertrizal.AdventureInterface"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:converter="clr-namespace:RuinsOfAlbertrizal.Editor.Converter"
      xmlns:local="clr-namespace:RuinsOfAlbertrizal"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1600"
      Title="">

    <Grid>
        <Image Style="{StaticResource goodQuality}" x:Name="mainImage">
            <Image.Source>
                <Binding Path="WorldImg">
                    <Binding.Converter>
                        <converter:ImageConverter/>
                    </Binding.Converter>
                </Binding>
            </Image.Source>
            <Image.BitmapEffect>
                <BlurBitmapEffect Radius="10" KernelType="Box" />
            </Image.BitmapEffect>
        </Image>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <Button x:Name="ExploreBtn" Content="Explore" Click="ExploreBtn_Click"/>
                <Button x:Name="InventoryBtn" Content="Inventory" Click="InventoryBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
