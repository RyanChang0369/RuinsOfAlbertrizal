<Page x:Class="RuinsOfAlbertrizal.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RuinsOfAlbertrizal"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1600"
      Title="MainMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Style="{StaticResource title}">The Ruins of Albertrizal</Label>
        <Image Grid.Row="1" Source="assets/Other/TitleImage2.png"/>
        <StackPanel Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="NewCampaign" Click="NewCampaign_Click">Start New Campaign</Button>
                <Button x:Name="ContinueCampaign" Click="ContinueCampaign_Click">Continue Campaign</Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Click="NavEditorMenu" IsEnabled="False">New Custom Map</Button>
                <Button Click="ContinueCustomMap" IsEnabled="False">Continue Custom Map</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
