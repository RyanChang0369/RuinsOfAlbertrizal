<Page x:Class="RuinsOfAlbertrizal.Editor.EditorMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RuinsOfAlbertrizal.Editor"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1600"
      Title="EditorMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Label Style="{StaticResource title}">Editor</Label>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <Button Click="CreateNewPlayer" Visibility="Hidden">Create New Player</Button>
                <Button Click="CreateNewEnemy" Visibility="Hidden">Create New Enemy</Button>
                <Button Click="CreateNewMap">Create New Map</Button>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Button Visibility="Hidden">Load Player</Button>
                <Button Visibility="Hidden">Load Enemy</Button>
                <Button>Load Map</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
