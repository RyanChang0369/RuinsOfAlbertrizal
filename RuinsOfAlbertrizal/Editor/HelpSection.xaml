<Page x:Class="RuinsOfAlbertrizal.Editor.HelpSection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RuinsOfAlbertrizal.Editor"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1600"
      Title="Reference">

    <Grid Background="WhiteSmoke">
        <FlowDocumentReader>
            <FlowDocument>
                <Paragraph Style="{StaticResource titleP}">Reference for Editing</Paragraph>
                <Paragraph Style="{StaticResource h1P}">Health</Paragraph>
                <Paragraph>
                    When a character's health reaches 0, the character dies. 
                </Paragraph>
            </FlowDocument>
        </FlowDocumentReader>
    </Grid>
</Page>
