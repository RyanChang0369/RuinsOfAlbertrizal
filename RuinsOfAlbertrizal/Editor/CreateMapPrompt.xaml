<Page x:Class="RuinsOfAlbertrizal.Editor.CreateMapPrompt"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RuinsOfAlbertrizal.Editor"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1600"
      Title="Create Map">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Style="{StaticResource title}">Create Map</Label>
        <StackPanel Grid.Row="1">
            <TabControl>
                <TabItem Header="Step 1" FontSize="48">
                    <StackPanel Background="#FFE5E5E5" Orientation="Horizontal">
                        <StackPanel>
                            <Label Style="{StaticResource h2}">Create Players and Enemies</Label>
                            <Button x:Name="CreatePlayerBtn" Click="NavPlayerPrompt" Content="Create Player" HorizontalAlignment="Left"/>
                            <Button x:Name="CreateEnemyBtn" Click="NavEnemyPrompt" Content="Create Enemies" HorizontalAlignment="Left"/>
                            <Button x:Name="CreateBossBtn" Click="NavBossPrompt" Content="Create Bosses" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                            <Label x:Name="CreatedPlayerLabel" Content="Created Player: "/>
                            <StackPanel Margin="50,0">
                                <Label>Created Enemies</Label>
                                <TextBlock x:Name="CreatedEnemiesTextBlock" Width="200" Style="{StaticResource defaultTextBlock}"/>
                            </StackPanel>
                            <StackPanel>
                                <Label>Created Bosses</Label>
                                <TextBlock x:Name="CreatedBossesTextBlock" Width="200" Style="{StaticResource defaultTextBlock}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Step 2" FontSize="48">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>

        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button x:Name="BackBtn" Click="Back">Back</Button>
            <Button x:Name="SaveBtn" Click="Save" IsDefault="True">Save</Button>
            <Button x:Name="LoadBtn" Click="Load">Load</Button>
        </StackPanel>
    </Grid>
</Page>
