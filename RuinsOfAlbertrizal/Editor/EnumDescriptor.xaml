<Window x:Class="RuinsOfAlbertrizal.Editor.EnumDescriptor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuinsOfAlbertrizal.Editor"
        mc:Ignorable="d"
        Title="EnumDescriptor" Height="450" Width="800">
    <StackPanel x:Name="InfoPanel">
        <TextBlock Text="Hover over an option to see its description." Margin="10" FontSize="32"/>
        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
    </StackPanel>
</Window>
