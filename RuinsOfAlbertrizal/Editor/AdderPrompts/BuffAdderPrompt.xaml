<Window x:Class="RuinsOfAlbertrizal.Editor.AdderPrompts.BuffAdderPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuinsOfAlbertrizal.Editor.AdderPrompts"
        xmlns:mapPrompts="clr-namespace:RuinsOfAlbertrizal.Editor"
        mc:Ignorable="d"
        Title="BuffAdderPrompt" Height="450" Width="800">
    
    <Window.Resources>
        <mapPrompts:CreateMapPrompt x:Key="CreateMapPrompt"/>
    </Window.Resources>

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label Content="Click To Add"/>
                <ListBox Width="200" FontSize="18" ToolTip="Click Item to Select" SelectionMode="Multiple" HorizontalAlignment="Left" Margin="10,0,0,0" DisplayMemberPath="Name" PreviewMouseLeftButtonUp="ListBox_PreviewMouseLeftButtonUp">
                    <ListBox.ItemsSource>
                        <Binding Path="Map.StoredBuffs" UpdateSourceTrigger="PropertyChanged" Mode="OneTime" Source="{StaticResource CreateMapPrompt}"/>
                    </ListBox.ItemsSource>
                </ListBox>
            </StackPanel>
            <StackPanel>
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
