<Window x:Class="RuinsOfAlbertrizal.Editor.AdderPrompts.MessageSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:validation="clr-namespace:RuinsOfAlbertrizal.Editor.Validator"
        xmlns:local="clr-namespace:RuinsOfAlbertrizal.Editor.AdderPrompts"
        mc:Ignorable="d"
        Title="Enter a Message" Height="400" Width="700">
    <StackPanel>
        <Label x:Name="HeaderLabel" Content="Separate New Lines by Pressing Enter"/>
        <TextBox x:Name="ValueTextBox" Margin="10" Width="Auto" Style="{StaticResource paragraphTextBox}" HorizontalAlignment="Stretch"/>
        <Button x:Name="Submit" Click="Submit_Click" Content="Submit"/>
    </StackPanel>
</Window>
