<local:BasePage x:Class="RuinsOfAlbertrizal.BattleInterface"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RuinsOfAlbertrizal"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1600"
      Title="BattleInterface">

    <Page.Resources>
        <ListBox x:Key="options_Player" Width="112">
            <Button Content="Heal" Style="{StaticResource toolTipBtn}" Click="Heal_Click"/>
            <Button Content="Food" Style="{StaticResource toolTipBtn}" Click="Food_Click"/>
        </ListBox>
    </Page.Resources>
    
    <Grid Background="WhiteSmoke">
        <Image Source="{Binding Path=WorldImgAsBitmapSource, Mode=OneTime}" Style="{StaticResource fill}"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="CharactersGrid" Grid.Row="1" Margin="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                
                <Grid x:Name="PlayersGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/> <!--Used as spacer-->
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/> <!--Used as spacer-->
                    </Grid.RowDefinitions>
                    <Image x:Name="player3" Margin="10" Grid.Row="1"/>
                    <Image x:Name="player2" Margin="10" Grid.Column="1" Grid.Row="2"/>
                    <Image x:Name="player1" Margin="10" Grid.Column="2" Grid.Row="1"/>
                    <Image x:Name="player0" Margin="10" Grid.Column="3" Grid.Row="2"/>
                    
                </Grid>
                <Border Child="{StaticResource options_Player}" Grid.Column="1"/>
                <Grid x:Name="EnemiesGrid" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/> <!--Used as spacer-->
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/> <!--Used as spacer-->
                    </Grid.RowDefinitions>
                    <Image x:Name="enemy3" Margin="10" Grid.Row="2"/>
                    <Image x:Name="enemy2" Margin="10" Grid.Column="1" Grid.Row="1"/>
                    <Image x:Name="enemy1" Margin="10" Grid.Column="2" Grid.Row="2"/>
                    <Image x:Name="enemy0" Margin="10" Grid.Column="3" Grid.Row="1"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</local:BasePage>
