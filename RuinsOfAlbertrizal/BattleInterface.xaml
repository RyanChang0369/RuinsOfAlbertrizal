<local:BasePage x:Class="RuinsOfAlbertrizal.BattleInterface"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RuinsOfAlbertrizal"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1600"
      Title="BattleInterface" Loaded="BasePage_Loaded">

    <Page.Resources>
        <Storyboard x:Key="playerSlideIn">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-300, 10, 10, 10" To="10" DecelerationRatio=".9" Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.0" To="1.0" Duration="0:0:2"/>
        </Storyboard>
        <Storyboard x:Key="playerSlideOut">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="10" To="-300, 10, 10, 10" DecelerationRatio=".9" Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.0" Duration="0:0:2"/>
        </Storyboard>

        <Storyboard x:Key="enemySlideIn">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="10, 10, -300, 10" To="10" DecelerationRatio=".9" Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.0" To="1.0" Duration="0:0:2"/>
        </Storyboard>
        <Storyboard x:Key="enemySlideOut">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="10" To="10, 10, -300, 10" DecelerationRatio=".9" Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.0" Duration="0:0:2"/>
        </Storyboard>

        <Storyboard x:Key="targetFadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.0" To="0.4"/>
        </Storyboard>
        <Storyboard x:Key="targetFadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.4" To="0.0"/>
        </Storyboard>

        <DataTemplate x:Key="attackDataTemplate">
            <StackPanel Style="{StaticResource inventoryStackPanel}">
                <Label Content="{Binding Path=DisplayName}"/>
                <Image Visibility="{Binding Path=MultiTarget, Converter={StaticResource BoolToVisibilityConverter}}" ToolTip="Multi-Target"/>
                <Image Visibility="{Binding Path=IgnoresArmor, Converter={StaticResource BoolToVisibilityConverter}}" ToolTip="Ignores Armor"/>
                <Image Visibility="{Binding Path=HasBuffs, Converter={StaticResource BoolToVisibilityConverter}}" ToolTip="Click to view buffs" MouseUp="BuffIcon_MouseUp" Tag="Buffs"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    
    <Grid Background="WhiteSmoke">
        <Image x:Name="BackgroundImg" Style="{StaticResource blurredAndZoomed}"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="CharactersGrid" Margin="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                
                <Grid x:Name="PlayersGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/> <!--Used as spacer-->
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/> <!--Used as spacer-->
                    </Grid.RowDefinitions>
                    <Image x:Name="targetPlayer3" Margin="10" Opacity="0.0" Source="assets/target.png" Grid.Row="1"/>
                    <Image x:Name="targetPlayer2" Margin="10" Opacity="0.0" Source="assets/target.png" Grid.Column="1" Grid.Row="2"/>
                    <Image x:Name="targetPlayer1" Margin="10" Opacity="0.0" Source="assets/target.png" Grid.Column="2" Grid.Row="1"/>
                    <Image x:Name="targetPlayer0" Margin="10" Opacity="0.0" Source="assets/target.png" Grid.Column="3" Grid.Row="2"/>
                    
                    <Image x:Name="player3" Margin="-300,10,10,10" Grid.Row="1"/>
                    <Image x:Name="player2" Margin="-300,10,10,10" Grid.Column="1" Grid.Row="2"/>
                    <Image x:Name="player1" Margin="-300,10,10,10" Grid.Column="2" Grid.Row="1"/>
                    <Image x:Name="player0" Margin="-300,10,10,10" Grid.Column="3" Grid.Row="2"/>
                </Grid>

                <Grid Grid.Column="1">
                    <StackPanel x:Name="TurnTickBarPanel" Orientation="Horizontal" Style="{StaticResource center}">
                        <ProgressBar x:Name="player0_ProgressBar" Style="{StaticResource playerProgressBar}" 
                                ToolTip="{Binding Path=ActivePlayers[0].DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                Value="{Binding Path=ActivePlayers[0].TurnTicks, UpdateSourceTrigger=PropertyChanged}"
                                Maximum="{Binding Path=MaxSpeed}"/>
                        
                        <ProgressBar x:Name="player1_ProgressBar" Style="{StaticResource playerProgressBar}"
                                ToolTip="{Binding Path=ActivePlayers[1].DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                Value="{Binding Path=ActivePlayers[1].TurnTicks, UpdateSourceTrigger=PropertyChanged}"
                                Maximum="{Binding Path=MaxSpeed}"/>
                        
                        <ProgressBar x:Name="player2_ProgressBar" Style="{StaticResource playerProgressBar}"
                                ToolTip="{Binding Path=ActivePlayers[2].DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                Value="{Binding Path=ActivePlayers[2].TurnTicks, UpdateSourceTrigger=PropertyChanged}"
                                Maximum="{Binding Path=MaxSpeed}"/>
                        
                        <ProgressBar x:Name="player3_ProgressBar" Style="{StaticResource playerProgressBar}"
                                ToolTip="{Binding Path=ActivePlayers[3].DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                Value="{Binding Path=ActivePlayers[3].TurnTicks, UpdateSourceTrigger=PropertyChanged}"
                                Maximum="{Binding Path=MaxSpeed}"/>
                        
                        <ProgressBar x:Name="enemy0_ProgressBar" Style="{StaticResource enemyProgressBar}"
                                ToolTip="{Binding Path=ActiveEnemies[0].DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                Value="{Binding Path=ActiveEnemies[0].TurnTicks, UpdateSourceTrigger=PropertyChanged}"
                                Maximum="{Binding Path=MaxSpeed}"/>
                        
                        <ProgressBar x:Name="enemy1_ProgressBar" Style="{StaticResource enemyProgressBar}"
                                ToolTip="{Binding Path=ActiveEnemies[1].DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                Value="{Binding Path=ActiveEnemies[1].TurnTicks, UpdateSourceTrigger=PropertyChanged}"
                                Maximum="{Binding Path=MaxSpeed}"/>
                        
                        <ProgressBar x:Name="enemy2_ProgressBar" Style="{StaticResource enemyProgressBar}"
                                ToolTip="{Binding Path=ActiveEnemies[2].DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                Value="{Binding Path=ActiveEnemies[2].TurnTicks, UpdateSourceTrigger=PropertyChanged}"
                                Maximum="{Binding Path=MaxSpeed}"/>
                        
                        <ProgressBar x:Name="enemy3_ProgressBar" Style="{StaticResource enemyProgressBar}"
                                ToolTip="{Binding Path=ActiveEnemies[3].DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                Value="{Binding Path=ActiveEnemies[3].TurnTicks, UpdateSourceTrigger=PropertyChanged}"
                                Maximum="{Binding Path=MaxSpeed}"/>
                    </StackPanel>
                </Grid>

                <Grid x:Name="EnemiesGrid" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/> <!--Used as spacer-->
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/> <!--Used as spacer-->
                    </Grid.RowDefinitions>
                    <Image x:Name="targetEnemy3"  Margin="10" Opacity="0.0" Source="assets/target.png" Grid.Row="2"/>
                    <Image x:Name="targetEnemy2"  Margin="10" Opacity="0.0" Source="assets/target.png" Grid.Column="1" Grid.Row="1"/>
                    <Image x:Name="targetEnemy1"  Margin="10" Opacity="0.0" Source="assets/target.png" Grid.Column="2" Grid.Row="2"/>
                    <Image x:Name="targetEnemy0"  Margin="10" Opacity="0.0" Source="assets/target.png" Grid.Column="3" Grid.Row="1"/>
                    
                    <Image x:Name="enemy3" Margin="10, 10, -300, 10" Grid.Row="2"/>
                    <Image x:Name="enemy2" Margin="10, 10, -300, 10" Grid.Column="1" Grid.Row="1"/>
                    <Image x:Name="enemy1" Margin="10, 10, -300, 10" Grid.Column="2" Grid.Row="2"/>
                    <Image x:Name="enemy0" Margin="10, 10, -300, 10" Grid.Column="3" Grid.Row="1"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid>
                    <TextBlock x:Name="InfoBlock" FontSize="24" Background="PapayaWhip" Text="{Binding Path=StoredMessage.FormattedLines, UpdateSourceTrigger=PropertyChanged}"/>
                    <StackPanel Background="SlateGray">
                        <ListBox x:Name="AttackSelector" ItemsSource="{Binding Path=SelectedPlayer.AllAttacks, UpdateSourceTrigger=Explicit}" ItemTemplate="{StaticResource attackDataTemplate}"/>
                    </StackPanel>
                </Grid>
                <StackPanel Grid.Column="1" x:Name="ActionPanel" Background="Snow">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Attack" Click="Attack_Click" Style="{StaticResource buttonMedium}"/>
                        <Button Content="[RESERVED]" Style="{StaticResource buttonMedium}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Inventory" Click="Inventory_Click" Style="{StaticResource buttonMedium}"/>
                        <Button Content="Flee" Click="Flee_Click" Style="{StaticResource buttonMedium}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</local:BasePage>
